# Production environment variables
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=your-domain.com,your-server-ip,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://localhost,http://127.0.0.1

# Database (PostgreSQL recommended for production)
DB_NAME=speechtotext_db
DB_USER=speechtotext_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Media and Static files
MEDIA_ROOT=/var/www/speechtotext/media
STATIC_ROOT=/var/www/speechtotext/static

# Security
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
